<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/robotLayout">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reportEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:editable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="X:"
        android:id="@+id/xText"
        android:layout_alignBaseline="@+id/xEditText"
        android:layout_alignBottom="@+id/xEditText"
        android:layout_alignRight="@+id/direcitonText"
        android:layout_alignEnd="@+id/direcitonText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Y:"
        android:id="@+id/yText"
        android:layout_alignBaseline="@+id/yEditText"
        android:layout_alignBottom="@+id/yEditText"
        android:layout_alignLeft="@+id/xText"
        android:layout_alignStart="@+id/xText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Direction:"
        android:id="@+id/direcitonText"
        android:layout_alignBaseline="@+id/directionEditText"
        android:layout_alignBottom="@+id/directionEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yEditText"
        android:layout_below="@+id/xEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/direcitonText"
        android:layout_toEndOf="@+id/direcitonText"
        android:inputType="number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xEditText"
        android:layout_below="@+id/reportEditText"
        android:layout_toRightOf="@+id/direcitonText"
        android:layout_alignRight="@+id/yEditText"
        android:layout_alignEnd="@+id/yEditText"
        android:inputType="number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/directionEditText"
        android:layout_below="@+id/yEditText"
        android:layout_alignLeft="@+id/yEditText"
        android:layout_alignStart="@+id/yEditText"
        android:layout_alignRight="@+id/yEditText"
        android:layout_alignEnd="@+id/yEditText"
        android:inputType="text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place"
        android:id="@+id/placeButton"
        android:onClick="onPlace"
        android:layout_below="@+id/directionEditText"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/placeButton"
        android:id="@+id/relativeLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move"
            android:id="@+id/moveButton"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:nestedScrollingEnabled="false"
            android:onClick="onMove" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left"
            android:id="@+id/leftButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onLeft" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right"
            android:id="@+id/rightButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="onRight" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report"
            android:id="@+id/reportButton"
            android:layout_below="@+id/moveButton"
            android:layout_alignLeft="@+id/moveButton"
            android:layout_alignStart="@+id/moveButton"
            android:onClick="onReport" />
    </RelativeLayout>

</RelativeLayout>
